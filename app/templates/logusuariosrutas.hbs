<br><br>
<div class="h3 text text-info">Reporte de Acceso</div>
<div class="form-group">
	<label for="solic" class="control-label">Limite Registros</label>
		<div class="row">
			<div class="col-xs-8 col-md-5">
				{{input type="number" value=limite class="form-control" placeholder="Limite" id="solic"}}
			</div>
	</div>
</div>
<div class="form-group">
		<label for="usuarios" class="control-label">Usuario</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedUSuario action=(action  (mut selectedUsuario)) class="form-control form-control-inline"}}
		  			{{#x-option value='0'}}Elija usuario{{/x-option}}
		  			{{#each listaUsuarios as |item|}}
		  				{{#x-option value=item.usuario}}{{item.usuario}}{{/x-option}}
					{{/each}}
				{{/x-select}}
			</div>
		</div>
</div>
{{#bsz-table titleCols=titleCols}}
		{{#each listaTabla as |record|}}
			{{bsz-row titleCols=titleCols record=record}}
  		{{/each}}
	{{/bsz-table}}
