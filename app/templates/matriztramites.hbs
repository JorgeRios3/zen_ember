<br><br>
<div class="h3 text text-info">Matriz de Trámites</div>
<br>
{{check-excelemail  hacer=(action (mut emailAddress))}}
{{emailAddress}}
<br>
<div class="form-group">
		<label class="control-label">Etapa</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedEtapa action=(action  (mut selectedEtapa)) class="form-control form-control-inline"}}
						{{#x-option value='1'}}Todas{{/x-option}}
						{{#each etapas as |item|}}
							{{#x-option value=item.id}}{{item.nombre}}{{/x-option}}
					{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>

	<table  class="table table-bordered table-striped table-condensed cf">
	<thead>
		<tr>
			<th>Tramite</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		{{#each tramitesTotales as |t|}}
		<tr>
			<td data-title="Tramite">
				{{t.tramite}}
			</td>
			<td data-title="Total">
				{{t.total}}
			</td>
		</tr>
		{{/each}}
		
	</tbody>
</table>
{{#unless noHayTramites}}
<div class="text text-warning">No hay trámites en esta etapa</div>
{{/unless}}