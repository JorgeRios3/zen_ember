<br><br><div class="h3 text text-info">Bancos Momivientos</div>
<div class="form-group">
	<label for="EmpresasLista" class="control-label">Empresa</label>
	<div class="row">
		<div class="col-md-5">
			{{#x-select value=selectedEmpresa action=(action  (mut selectedEmpresa)) class="form-control form-control-inline"}}
			{{#x-option value=''}}Elija Empresa{{/x-option}}
			{{#each empresasLista as |item|}}
				{{#x-option value=item.id}}{{item.razonsocial}}{{/x-option}}
			{{/each}}
			{{/x-select}}
		</div>
	</div>
</div>
{{#if bancoOrigenLista}}
	<div class="form-group">
	<label for="idbancoOrigen" class="control-label">Banco Origen</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedBancoOrigen action=(action  (mut selectedBancoOrigen)) class="form-control form-control-inline"}}
				{{#x-option value=''}}Escoja Banco{{/x-option}}
				{{#each bancoOrigenLista as |item|}}
					{{#x-option value=item.id}}{{item.nombre}}{{/x-option}}
				{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="EmpresasLista" class="control-label">Estatus</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedEstatus action=(action  (mut selectedEstatus)) class="form-control form-control-inline"}}
				{{#x-option value=''}}Todos{{/x-option}}
				{{#each listaEstatus as |item|}}
					{{#x-option value=item.id}}{{item.label}}{{/x-option}}
				{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="movimientoLista" class="control-label">Movimiento</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedMovimiento action=(action  (mut selectedMovimiento)) class="form-control form-control-inline"}}
				{{#x-option value=''}}Todos{{/x-option}}
				{{#each listaTipoMovto as |item|}}
					{{#x-option value=item.value}}{{item.label}}{{/x-option}}
				{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="clasificadoLista" class="control-label">Clasificado</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedClasificado action=(action  (mut selectedClasificado)) class="form-control form-control-inline"}}
				{{#x-option value=''}}Todos{{/x-option}}
				{{#each listaClasificado as |item|}}
					{{#x-option value=item.value}}{{item.label}}{{/x-option}}
				{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for="eliminadoLista" class="control-label">Eliminado</label>
		<div class="row">
			<div class="col-md-5">
				{{#x-select value=selectedEliminado action=(action  (mut selectedEliminado)) class="form-control form-control-inline"}}
				{{#x-option value=''}}Todos{{/x-option}}
				{{#each listaEliminado as |item|}}
					{{#x-option value=item.value}}{{item.label}}{{/x-option}}
				{{/each}}
				{{/x-select}}
			</div>
		</div>
	</div>
	<div class="form-inline">
		<div class="h5 text text-info">Fechas Captura</div>
		<div class="form-group">
		<label for="datewidget" class="control-label">Fecha Inicial</label>
		<div>
        	{{bs-datetimepicker id='fecha1' date=nullFechaCapturaInicial showClear=true showTodayButton=true format="YYYY/MM/DD" locale="es" updateDate=(action (mut fechaCapturaInicial))}}
    	</div>
	</div>
	<div class="form-group">
		<label for="datewidget2" class="control-label">Fecha Final</label>
		<div >
        	{{bs-datetimepicker id='fecha2' date=nullFechaCapturaFinal showClear=true showTodayButton=true format="YYYY/MM/DD" locale="es" updateDate=(action (mut fechaCapturaFinal))}}
    		</div>
    	</div>
	</div>
	<br>
	<div class="form-inline">
		<div class="btn btn-info" {{action "buscarMovimientos"}}>Buscar Solicitudes</div>
		{{#if showBotonAgregar}}
		<div class="btn btn-success" {{action "toggleFormaMovimiento"}}>Agregar Movimiento</div>
		{{/if}}
		<div class="btn btn-info" {{action "pedirSaldo" true}}>Refrescar Saldos</div>
		{{#if saldoBanco}}
			<div class="h3 text text-info">saldo banco {{saldoBanco}}</div>
		{{/if}}
	</div>
{{/if}}
{{#if formaMovimiento}}
	<br>
	<div class="jumbotron col-xs-4 .col-md-4">
		<div class="h4 text text-info text-center">Movimiento Nuevo</div>
		<div class="row text-center">
				<div class="form-group">
					<label for="DateForma" class="control-label">Fecha</label>
					<div>
	        			{{bs-datetimepicker id='DateForma' date=nullFechaCapturaInicialForma showClear=true showTodayButton=true format="YYYY/MM/DD" locale="es" updateDate=(action (mut fechaForma))}}
	    			</div>
				</div>
			</div>
			<div class="row text-center">
				<div class="form-group">
					<label for="movimientoListaForma" class="control-label">Tipo</label>
					
						<div>
							{{#x-select value='C' action=(action  (mut selectedTipoForma)) class="form-control form-control-inline"}}
							{{#each listaTipoMovto as |item|}}
								{{#x-option value=item.value}}{{item.label}}{{/x-option}}
							{{/each}}
							{{/x-select}}
						</div>
					</div>
			</div>
			<div class="row text-center">
				<div class="form-group">
					<label for="inporteForma" class="control-label">Cantidad</label>
					<div class="row text-center">
						<div>
						{{input type="number" value=cantidadForma class="form-control" placeholder="Cantidad" id="inporteForma"}}
						</div>
					</div>
				</div>
			</div>
		
		<div class="row text-center">
				<div class="form-group">
					<label for="referenciaForma" class="control-label">Referencia</label>
					<div class="row text-center">
						<div>
						{{input type="text" value=referenciaForma class="form-control" placeholder="referencia" id="referenciaForma"}}
						</div>
					</div>
				</div>
			</div>
			<div class="row text-center">
				<div class="form-group">
					<label for="estatusListaForma" class="control-label">Estatus</label>
					<div class="row text-center">
						<div>
							{{#x-select value='F' action=(action  (mut selectedEstatusForma)) class="form-control form-control-inline"}}
							{{#each listaEstatus as |item|}}
								{{#x-option value=item.value}}{{item.label}}{{/x-option}}
							{{/each}}
							{{/x-select}}
						</div>
					</div>
				</div>
			</div>
			<div class="row text-center">
				<div class="form-group">
					<div class="row text-center">
						<div class="text text-danger">
							No clasificado
						</div>
					</div>
				</div>
			<div class="row text-center">
					{{#if observaCamposForma}}
						{{#if movimientoRecord}}
								<div class="btn btn-success" {{action "updateRecord"}}>Guardar</div>
							{{else}}
								<div class="btn btn-success" {{action "grabarMovimiento"}}>Aplicar</div>
						{{/if}}
					{{/if}}
					<div class="btn btn-info" {{action "limpiarCamposForma"}}>Agregar</div>
					<div class="btn btn-warning" style="margin:5px" {{action "toggleFormaMovimiento"}}>Cancelar</div>
			</div>
		</div>
	</div>
	<br>
{{/if}}
{{#if formaActionMovimiento}}
	<div class="jumbotron">
		<div class="h4 text text-info">Opciones del movimiento {{movimientoRecord.id}}</div>
		<div class="row">
			<div class="btn btn-info" {{action "editRecord" movimientoRecord}}>Editar</div>
			<div class="btn btn-danger" {{action "deleteRecord" movimientoRecord}}>Eliminar</div>
			<div class="btn btn-warning" {{action "backRecord" movimientoRecord}}>Volver</div>
		</div>
	</div>
{{/if}}
<br>
{{#if showNavigation}}
	<div class="row">
	<h4 class="text text-danger">Bloque {{resultPage}} de {{resultPages}} ( Total a mostrar {{resultRowCountFormatted}} )</h4>
	{{#if hayPagPrevias}}
		<button class="btn btn-primary" {{action 'mostrarPagPrevia'}}><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;Bloque Previo</button>
	{{/if}}
	{{#if hayPagSiguientes}}
		<button class="btn btn-primary" {{action 'mostrarPagSiguiente'}}>Bloque Siguiente&nbsp;<span class="glyphicon glyphicon-arrow-right"></span></button>
	{{/if}}
</div>
{{/if}}
<div id="no-more-tables">
<br>
	<table class="table table-bordered table-striped table-condensed cf">
	<thead>
	<tr>
		<th>Id</th>
		<th>Fecha</th>
		<th>Banco</th>
		<th>Cantidad</th>
		<th>Referencia</th>
		<th>Tipo</th>
		<th>Estatus</th>
		<th>Clasificado</th>
		<th>Eliminado</th>
	</tr>
	</thead>
	<tbody>
	{{#each movimientosLista as |row i|}}
		<tr>
			<td data-title="Id">
				{{#unless row.isClasificadoEliminado}}
						<a href="" {{action "traerRecord" row.id}}>{{row.id}}</a>
				{{else}}
					{{row.id}}
				{{/unless}}
			</td>
			<td data-title="Fecha Captura">{{row.fecha}}</td>
			<td data-title="Banco">{{row.nombrebanco}}</td>
			<td data-title="Cantidad" class="text-right">{{row.cantidadComas}}</td>
			<td data-title="Beneficiario">{{row.referencia}} </td>
			<td data-title="Tipo">{{row.tipo}}</td>
			<td data-title="Estatus">{{row.estatus}}</td>
			<td data-title="Clasificado">{{row.clasificado}}</td>
			<td data-title="Eliminado">{{row.eliminado}}</td>
			
		</tr>
	{{/each}}
	</tbody>
	</table>
</div>

{{#if errorModal}}
  {{#modal-bs title=errorTitle ok="okCerrarModal" close="okCerrarModal"}}
   {{errorMsg}}
  {{/modal-bs}}
{{/if}}