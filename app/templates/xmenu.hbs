<div class="h3 text text-info">Mantenimiento Items</div>
<div class="form-group">
	<label class="control-label">Item</label>
	<div class="row">
		<div class="col-md-5">
		{{#x-select value=selectedItem action=(action  (mut selectedItem)) class="form-control form-control-inline"}}
			{{#x-option value=''}}Todas{{/x-option}}
			{{#each model as |item|}}
				{{#x-option value=item.item}}{{item.item}}{{/x-option}}
			{{/each}}
		{{/x-select}}
		</div>
	</div>
</div>
<div class="form-group">
		<div class="checkbox">
			<label>{{input type="checkbox" name="consulta" checked=consulta }}Consulta</label>
		</div>		
	</div>
<div class="form-group">
	<label class="control-label">title</label>
	<div class="row">{{input type='text' value=title}}</div>
</div>
<div class="form-group">
	<label class="control-label">intro</label>
	<div class="row">{{input type='text' value=intro}}</div>
</div>
<div class="form-group">
	<label class="control-label">item</label>
	<div class="row">{{input type='text' value=item}}</div>
</div>
<div class="form-group">
	<label class="control-label">fecha</label>
	<div class="row">{{input type='text' value=fecha}}</div>
</div>

